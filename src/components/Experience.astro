---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="py-20 sm:py-24 md:py-32 px-6 sm:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">
          <div class="lg:col-span-4 reveal-on-scroll">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-black tracking-tight">
              Experience
            </h2>
            <div class="w-16 h-1 mt-4 rounded-full bg-black/20" />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {/* Timeline line */}
              <div class="absolute left-[7px] top-3 bottom-3 w-px bg-black/[0.08]" />

              <div class="space-y-10">
                {siteConfig.experience.map((exp, index) => (
                  <div class={`reveal-on-scroll ${index > 0 ? `delay-${index * 100}` : ""} relative pl-10`}>
                    {/* Timeline dot */}
                    <div class="absolute left-0 top-1.5 w-[15px] h-[15px] rounded-full border-[3px] border-black/30 bg-white z-10" />

                    <div class="bg-black/[0.02] rounded-xl border border-black/[0.06] p-5 sm:p-6 hover:border-black/15 hover:bg-black/[0.04] transition-all duration-300">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1 mb-4">
                        <div>
                          <h3 class="text-lg sm:text-xl font-semibold text-black">
                            {exp.title}
                          </h3>
                          <p class="text-base font-medium text-black/60">
                            {exp.company}
                          </p>
                        </div>
                        <span class="text-xs font-mono font-medium text-black/50 tracking-wider whitespace-nowrap">
                          {exp.dateRange}
                        </span>
                      </div>

                      <ul class="space-y-2.5">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start gap-3">
                            <span class="inline-block w-1 h-1 rounded-full mt-2.5 flex-shrink-0 bg-black/20" />
                            <span class="text-sm sm:text-base text-black/60 leading-relaxed">
                              {bullet}
                            </span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
