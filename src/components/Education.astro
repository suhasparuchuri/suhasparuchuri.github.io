---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="py-20 sm:py-24 md:py-32 px-6 sm:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">
          <div class="lg:col-span-4 reveal-on-scroll">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-black tracking-tight">
              Education
            </h2>
            <div class="w-16 h-1 mt-4 rounded-full bg-black/20" />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {siteConfig.education.map((edu, index) => (
                <div class={`reveal-on-scroll ${index > 0 ? `delay-${index * 100}` : ""}`}>
                  <div class="group bg-black/[0.02] rounded-xl border border-black/[0.06] p-5 sm:p-6 hover:border-black/15 hover:bg-black/[0.04] transition-all duration-300">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-1 mb-4">
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-black">
                          {edu.degree}
                        </h3>
                        <p class="text-base font-medium text-black/60">
                          {edu.school}
                        </p>
                      </div>
                      <span class="text-xs font-mono font-medium text-black/50 tracking-wider whitespace-nowrap">
                        {edu.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-2.5">
                      {edu.achievements.map((achievement) => (
                        <li class="flex items-start gap-3">
                          <span class="inline-block w-1 h-1 rounded-full mt-2.5 flex-shrink-0 bg-black/20" />
                          <span class="text-sm sm:text-base text-black/60 leading-relaxed">
                            {achievement}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
