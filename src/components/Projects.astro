---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="py-20 sm:py-24 md:py-32 px-6 sm:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">
          <div class="lg:col-span-4 reveal-on-scroll">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-black tracking-tight">
              Projects
            </h2>
            <div class="w-16 h-1 mt-4 rounded-full bg-black/20" />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class={`reveal-on-scroll ${index > 0 ? `delay-${index * 100}` : ""}`}>
                    <div class="group relative">
                      <Component
                        {...linkProps}
                        class={`block relative p-6 sm:p-8 bg-black/[0.02] rounded-2xl border border-black/[0.06] transition-all duration-300 ${
                          project.link
                            ? "hover:border-black/15 hover:bg-black/[0.04] hover:-translate-y-0.5"
                            : ""
                        }`}
                      >
                        <div class="flex items-start justify-between gap-4">
                          <div class="space-y-3 flex-1">
                            <div class="flex items-center gap-3">
                              <span class="text-xs font-mono font-semibold tracking-wider text-black/40">
                                {String(index + 1).padStart(2, "0")}
                              </span>
                              <div class="h-px flex-1 max-w-8 bg-black/10" />
                            </div>
                            <h3 class="text-xl sm:text-2xl font-bold text-black">
                              {project.name}
                            </h3>
                            <p class="text-base text-black/60 leading-relaxed">
                              {project.description}
                            </p>

                            {project.skills && project.skills.length > 0 && (
                              <div class="flex flex-wrap gap-2 pt-2">
                                {project.skills.map((skill) => (
                                  <span class="px-3 py-1 bg-black/[0.03] border border-black/[0.06] text-black/55 rounded-md text-xs font-medium transition-colors duration-300 group-hover:text-black/75 group-hover:border-black/10">
                                    {skill}
                                  </span>
                                ))}
                              </div>
                            )}
                          </div>

                          {project.link && (
                            <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-full border border-black/10 text-black/25 transition-all duration-300 group-hover:bg-black group-hover:text-white group-hover:border-black">
                              <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                              </svg>
                            </div>
                          )}
                        </div>
                      </Component>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
