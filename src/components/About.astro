---
import { siteConfig } from "../config";
---

<section id="about" class="py-20 sm:py-24 md:py-32 px-6 sm:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">
      <div class="lg:col-span-4 reveal-on-scroll">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-black tracking-tight">
          About Me
        </h2>
        <div class="w-16 h-1 mt-4 rounded-full bg-black/20"></div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="reveal-on-scroll text-lg sm:text-xl leading-relaxed text-black/70">
          {siteConfig.aboutMe}
        </p>

        <div class="reveal-on-scroll delay-200 pt-2">
          <p class="text-lg font-mono font-medium text-black/40  tracking-wider mb-4">
            I am very good at:
          </p>
          <div class="flex flex-wrap gap-2.5">
            {siteConfig.skills.map((skill) => (
              <span class="px-4 py-2 rounded-lg text-sm font-medium text-black/60 bg-black/[0.03] border border-black/[0.08] transition-all duration-200 hover:scale-105 hover:bg-black/[0.06] hover:text-black/80">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
